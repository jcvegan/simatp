<Window x:Class="SIMA.Client.Auxiliares.frmSelectorEquipos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    Title="Selector de Equipos" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>
        <telerik:RadGridView Name="gvEquipos" Grid.Row="0" telerik:StyleManager.Theme="Summer">
            <telerik:RadGridView.Columns>
                <telerik:GridViewCheckBoxColumn Header="Seleccionado"/>
                <telerik:GridViewDataColumn Header="Id Equipo" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="Descripción de Equipo" IsReadOnly="True"/>
                <telerik:GridViewDataColumn Header="Cantidad"/>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Row="1" Orientation="Horizontal">
            <telerik:RadButton Name="btnAceptar" Width="100" Content="Aceptar" VerticalAlignment="Stretch" telerik:StyleManager.Theme="Summer" Click="btnAceptar_Click"/>
            <telerik:RadButton Name="btnCancelar" Width="100" Content="Cancelar" VerticalAlignment="Stretch" telerik:StyleManager.Theme="Summer"/>
        </StackPanel>
    </Grid>
</Window>
